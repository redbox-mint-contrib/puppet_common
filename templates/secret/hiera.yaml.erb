---
:hierarchy:
<%- if @gpg_name -%>
  - <%= @gpg_name %>
<%- end -%>
  - "%{environment}"
  - common
:backends: 
  - yaml
  - gpg
:merge_behavior: deeper
:yaml:
  :datadir: <%= scope.lookupvar('puppet_common::variables::puppet::hiera_data_dir')  %>
:gpg:
  :datadir: <%= scope.lookupvar('puppet_common::variables::puppet::hiera_data_dir') %>/secret