---
:hierarchy:
  - "%{fqdn}"
  - "%{environment}"
  - common
:backends: 
  - yaml
  - gpg
:merge_behavior: deeper
:yaml:
  :datadir: <%= scope['puppet_common::variables::puppet::hiera_data_dir'] %>
:gpg:
  :datadir: <%= scope['puppet_common::variables::puppet::hiera_secret_data_dir'] %>
  :key_dir: "/etc/puppet/gpg"

